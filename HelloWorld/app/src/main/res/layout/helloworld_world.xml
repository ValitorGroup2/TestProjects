<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HelloWorld">

    <TextView
        android:text="Press the button to change this text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_this_text"/>
    <Button
        android:text="Change the text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_this_text"
        android:onClick="changeTheText"
        android:id="@+id/btnChangeText"/>

        />
    <Button
        android:text="Open second page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openPage"
        android:layout_above="@+id/btnOpenThirdPage"
        android:id="@+id/btnOpenSecondPage"/>

    <Button
        android:text="Open third page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openPage"
        android:id="@+id/btnOpenThirdPage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />


</RelativeLayout>
